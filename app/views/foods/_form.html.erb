<%= select_tag :name, options_for_select(items_collection_as_options(@food_records)), class: 'options' %>
<%= link_to 'Fill fields below', '#', class: 'fill btn' %>

<%= form_for [@person, @food] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :points %>
  <%= f.number_field :points %>
  <%= f.label :weight %>
  <%= f.number_field :weight %>
  <%= f.submit 'Add Food', class: 'btn' %>
<% end %>